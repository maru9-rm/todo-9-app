%h2= @board.title
- @tasks.each do |task|
  .block.board
    -if task.eyecatch.attached?
      = image_tag task.eyecatch, class: 'eyecatch board-show-eyecatch'
    .block-title
      = link_to board_task_path(@board, task) do
        %h3= task.title
    .block-content
      %p= task.content
    .user-icon-blockmaker
      = image_tag task.user.avatar_image, class: 'user-icon'
    .comment-count
      %span= task.comments.count
      = image_tag 'message-square-outline.png'


= link_to new_board_task_path(@board.id) do
  .block.new-block
    %p + Add new task


